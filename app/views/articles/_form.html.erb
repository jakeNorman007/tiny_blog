<%# edit article form %>
<%= form_with(model: @article, local: true) do |f|%>
  <%= f.file_field :image %>
  <%= f.label :title, 'Article title.' %>
  <%= f.text_field :title %>
  <%= f.label :description, 'Article description.' %>
  <%= f.text_area :description, :rows => 15, class: "text-area" %>
  <% %>
  <details role='list'>
    <summary aria-haspopup="listbox" role='button'>Select a category for your post.</summary>
      <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "('Ctrl +click' to select multiple.)"}, {multiple: true}) %>
  </details>
  <%= f.submit %>
<% end %>