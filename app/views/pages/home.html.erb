<div class="div-center">
  <ul>
    <li>
      <h4 class='h4-menu'><%= link_to "TinyBlog.", about_path %></h4>
    </li>
    <li>
      <h4 class='h4-menu'><%= link_to 'Articles.', articles_path %></h4>
    </li>
    <li>
      <h4 class='h4-menu'><%= link_to 'Categories.', categories_path %></h4>
    </li>
    <% if logged_in? %>
      <li>
        <h4 class='h4-menu'><%= link_to 'Log out.', logout_path, method: :delete %></h4>
      </li>
      <li>
        <h4 class='h4-menu'><%= link_to current_user.username + '.', user_path(current_user) %></h4>
      </li>
    <% else %>
      <li>
        <h4 class='h4-menu'><%= link_to 'Log in.', login_path %></h4>
      </li>
      <li>
        <h4 class='h4-menu'><%= link_to 'Sign up.', signup_path %></h4>
      </li>
    <% end %>
  </ul>
</div>
