<body>
  <main>
    <%= render 'shared/nav' %>
    <h1>TinyBlog users.</h1>
    <%= will_paginate @users %>
    <div>
      <% @users.each do |user| %>
        <article>
          <header>
            <div>
             <%= link_to user.username, user %>
            </div>
          </header>
          <%= pluralize(user.articles.count, "article") %>
          <footer>
            <%= link_to "View profile.", user %>
            <% if logged_in? %>
              <% if user == current_user %>
                <%= link_to "Edit Profile.", edit_user_path(user) %>
              <% end %>
              <% if current_user.admin? %>
                <%= link_to "Delete user.", user_path(user), method: :delete, data: {confirm: "Are you sure?"} %>
              <% end %>
            <% end %>
            <br/>
          </footer>
        </article>
      <% end %>  
    </div>
    <%= will_paginate @users %>
    <%= link_to 'Return home.', root_path %>
  </main>
  <%= render 'shared/footer' %>
</body> 