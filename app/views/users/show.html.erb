<%= render 'shared/nav' %>
<body>
  <main>
    <article>
      <div class='container'>
        <h1><%= @user.username %>'s profile.</h1>
      </div>
      <div class='container'>
        <% if @user.avatar.attached? %>
          <%= image_tag @user.avatar, class: 'profile-pics' %>
        <% end %>
      </div>
      <div class='container'>
        <h1>Articles.</h1>
      </div>
      <div>
        <%= render 'articles/article', obj: @user %>
      </div>
    </article>
  </main>
</body>
<%= link_to 'Explore other articles.', root_path %>